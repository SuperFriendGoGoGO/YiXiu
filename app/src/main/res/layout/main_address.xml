<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:top="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.zykj.yixiu.widget.MyTopBar
        top:leftdown="@mipmap/u312"
        top:titleText="地址管理"
        android:layout_width="match_parent"
        android:layout_height="30dp"></com.zykj.yixiu.widget.MyTopBar>

    <include layout="@layout/tool_line"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
           android:background="@mipmap/u509">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@mipmap/u132"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="新增地址"
            android:textColor="#c4c4c4"
            android:textSize="18dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="姓名"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:textColorHint="#c4c4c4"
            android:layout_marginLeft="70dp"
            android:hint="请输入你的姓名"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@mipmap/u30_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="手机号"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"
            android:gravity="right"
            android:text="18348690129"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/u96"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@mipmap/u30_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="详细地址"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:hint="请输入你的详细地址"
            android:textColorHint="#c4c4c4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="设置默认"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            />
       <Switch
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_marginRight="30dp"
           android:checked="true"
           android:gravity="right"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="手机号"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:hint="请输入你的手机号"
            android:textColorHint="#c4c4c4"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        android:background="@mipmap/u2556"
        android:layout_marginTop="20dp"/>

</LinearLayout>